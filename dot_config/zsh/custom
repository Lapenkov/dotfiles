#/* vim: set filetype=zsh : */

spex_set_verbose() {
    export SPEX_DUMP_LL=$1
    export SPEX_DUMP_PL=$1
    export SPEX_DUMP_QL=$1
}

spex_vebose_on() {
    spex_set_verbose 1
}

spex_verbose_off() {
    unset SPEX_DUMP_LL
    unset SPEX_DUMP_PL
    unset SPEX_DUMP_QL
}

_user_desktop() {
    echo "%{$fg[cyan]%}%n@dev%{$reset_color%}:"
}
PROMPT="
$(_user_desktop)${_current_dir} $(git_prompt_info) $(_ruby_version)
%{$fg[$CARETCOLOR]%}â–¶%{$resetcolor%} "
